{% extends 'base.html.twig' %}

{% block body %}

    <a href="{{ path('createProduct') }}" class="btn btn-success">Ajouter</a>

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prix</th>
            <th scope="col">Photo</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for product in products %}


        <tr>
            <th scope="row">{{ product.id   }}</th>
            <td>{{ product.title }}</td>
            <td>{{ product.price }} €</td>
            <td><img src="{{ asset('uploads/') }}{{ product.picture }}" width="50" alt=""></td>
            <td>
                <a href="{{ path('updateProduct', { id: product.id }) }}" class="btn btn-warning">Modifier</a>
                <a href="{{ path('deleteProduct', {id: product.id }) }}" onclick="return confirm('Etes-vous sûr?')" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>


{% endblock %}
