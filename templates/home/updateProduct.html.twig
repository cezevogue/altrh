{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.price) }}
    {{ form_row(form.pictureUpdate ,{ 'attr':{ 'onChange': 'loadFile(event)'} }   ) }}
    <div class="row justify-content-center">
        <div class="text-center col-md-6">
            <img id="image" style="width: 300px">
        </div>
        <div class="text-center col-md-6">
            <img style="width: 300px" src="{{ asset('uploads/') }}{{ product.picture }}" alt="">
        </div>
    </div>
    {{ form_row(form.Enregistrer) }}
    {{ form_end(form) }}




    <script>
        var loadFile = function (event) {

            var image = document.getElementById('image');

            image.src = URL.createObjectURL(event.target.files[0]);

        };

    </script>
{% endblock %}
